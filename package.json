{
  "name": "static-site-webpack",
  "version": "1.0.0",
  "scripts": {
    "dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "start": "webpack serve --mode development --open",
    "build": "webpack --mode production && prettier --print-width=120 --parser html --write dist/*.html",
    "format": "prettier --write **/*.{js,scss,html}",
    "post-update": "yarn upgrade --latest"
  },
  "dependencies": {
    "@popperjs/core": "^2.9.3",
    "bootstrap": "^5.1.0"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.3.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.3.0",
    "node-sass": "^6.0.1",
    "prettier": "^2.4.1",
    "raw-loader": "^4.0.2",
    "sass-loader": "^12.1.0",
    "terser-webpack-plugin": "^5.2.4",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  },
  "main": "index.js",
  "repository": "https://github.com/filimonov-codedot/static-site-webpack",
  "author": "filimonov-codedot <filimonov.codedot@gmail.com>",
  "license": "MIT"
}
